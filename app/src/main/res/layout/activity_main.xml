<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:textColor="@color/ic_launcher_background"
        android:id="@+id/Quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz"
        android:textSize="32dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_margin="32dp"></TextView>

    <TextView
        android:id="@+id/Username"
        android:layout_width="83dp"
        android:layout_height="33dp"
        android:layout_below="@id/Quiz"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="278dp"
        android:layout_marginBottom="100dp"
        android:text="Username"
        android:textSize="17dp"
        android:textColor="@color/ic_launcher_background"></TextView>

    <EditText
        android:id="@+id/enter_username"
        android:layout_width="165dp"
        android:layout_height="52dp"
        android:layout_below="@+id/Quiz"
        android:layout_marginStart="50dp"
        android:layout_marginTop="280dp"
        android:layout_marginBottom="40dp"
        android:layout_toEndOf="@+id/Username"
        android:layout_marginEnd="71dp"></EditText>

    <TextView
        android:id="@+id/Password"
        android:layout_width="82dp"
        android:layout_height="32dp"
        android:layout_below="@id/Quiz"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="347dp"
        android:layout_marginBottom="100dp"
        android:textSize="17dp"
        android:text="Password"
        android:textColor="@color/ic_launcher_background"
        ></TextView>

    <EditText
        android:id="@+id/enter_password"
        android:layout_width="162dp"
        android:layout_height="52dp"
        android:layout_below="@+id/Quiz"
        android:layout_marginStart="50dp"
        android:layout_marginTop="332dp"
        android:layout_marginBottom="555dp"
        android:layout_toEndOf="@+id/Password"
        android:inputType="textPassword"
        android:layout_marginEnd="71dp"
        ></EditText>

    <Button
        android:id="@+id/button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Quiz"
        android:layout_alignParentStart="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="440dp"
        android:text="Play"
        android:textColor="@color/ic_launcher_background"></Button>

    <Button
        android:id="@+id/Register"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Quiz"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="220dp"
        android:layout_marginTop="440dp"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="100dp"
        android:text="Register"
        android:textColor="@color/ic_launcher_background"></Button>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="223dp"
        android:layout_height="181dp"
        android:layout_below="@+id/Quiz"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="99dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="90dp"
        app:srcCompat="@drawable/download" />



</RelativeLayout>